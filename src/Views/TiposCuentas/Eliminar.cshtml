@model TipoCuenta
@{
	ViewData["Title"] = "Eliminar Tipo Cuenta";
}

<h1>Eliminar Tipo Cuenta: @Model.Nombre</h1>
<h5 class="text-danger">¿Seguro que quiere eliminar permanentemente el tipo de cuenta de su lista?</h5>

<form asp-controller="TiposCuentas" asp-action="EliminarTipoCuenta">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Eliminar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>