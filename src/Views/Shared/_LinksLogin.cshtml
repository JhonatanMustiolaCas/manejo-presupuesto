@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Usuario> SignInManger

<ul class="navbar-nav">
	@if (SignInManger.IsSignedIn(User))
	{
		<li class="nav-item">
			<span class="nav-link text-dark">Bienvenido, @User.Identity.Name</span>
		</li>
		<li class="nav-item">
			<form class="form-inline" asp-action="logout" asp-controller="usuarios">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="usuarios" asp-action="Registro">Regístro</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="usuarios" asp-action="login">Login</a>
		</li>
	}
</ul>
